
body{
	background-image: url("pepernotenback.jpg");
	height: 100%;
	margin-top: -100px;
}

#sidebar {
	position: absolute;
	display: flex;	
	flex-direction: column;
	gap: 10px;
}

#backtomenu {
	width: 90%;
	margin: auto;
}

#log {
	padding-left: 5px;
	font-weight: bold;
	color: #white;
	background-color: #d1ce9b;
	box-shadow: 5px 3px #24231a;
	margin: auto;
}

#pedia {
	text-align: center;
	background-color: #d1ce9b;
	width: 180px;
	padding-bottom: 10px;
	margin: auto;
}

#scroll {
	width: 90%;
	margin: auto;
}

#midsquare {
	margin: auto;
	margin-top: 10vh;
	width: 80%;
	height: auto;
	background-image: url("../channels4_banner.png");
}

#theatre {
	background-color: #E2DDDB;
	margin: auto;
	padding: 50px;
	width: 70%;
	height: auto;
}

h1{
	font-size: 56px;
	text-align: center;
	background-color: white;
	box-shadow: 5px 5px black;
}

#scene {
	width: 100%;
	padding-top: 10px;
}

p{
	padding: 8px;
	font-size: 20px;
	background-color: white;
	margin-bottom: 50px;
}

#prvpage {
	display: inline-block;
}

#nxtpage {
	display: inline-block;
	float: right;
}

@media only screen and (max-width: 800px) {
	/* for mobile*/
	
	#sidebar {
		transform-origin: top left;
		transform: scale(0.40);
	}
	
	#backtomenu{
		font-weight: bold;
	}
	
	#log	{
		font-size: 16px;
	}
	
	#pedia {
		text-align: center;
		background-color: white;
		font-weight: bold;
		font-size: 24px;
	}

	
	
	h1	{
		font-size: 30px;
	}
	
	#quote {
		font-size: 20px;
	}
}