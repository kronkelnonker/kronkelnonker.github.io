
body{
	background-image: url("../../NL/pepernotenback.jpg");
	height: 100%;
	margin-top: -100px;
}

#sidebar {
	padding-top: 20px;
	position: absolute;
	display: flex;	
	flex-direction: column;
	gap: 10px;
}

#backtomenu {
	width: 90%;
	margin: auto;
}

#log {
	padding-left: 5px;
	font-weight: bold;
	color: #white;
	background-color: #d1ce9b;
	box-shadow: 5px 3px #24231a;
	margin: auto;
}

#midsquare {
	margin: auto;
	margin-top: 9vh;
	width: 80%;
	background-color: #bda013;
	height: 100%;
	padding-bottom: 100px;
}

#theatre {
	background-color: #E2DDDB;
	margin: auto;
	padding: 50px;
	width: 85%;
}

h1{
	font-size: 56px;
	text-align: center;
	background-color: white;
	box-shadow: 5px 5px black;
}

h2{
	margin-bottom: -15px;
}

#scene {
	width: 100%;
	padding-top: 10px;
}

#straat {
	padding: 8px;
	display: flex;
	flex-wrap: wrap;
}

p{
	font-size: 20px;
	background-color: white;
}

#prvpage {
	display: inline-block;
}

#nxtpage {
	display: inline-block;
	float: right;
}

@media only screen and (max-width: 800px) {
	/* for mobile*/
	
	#midsquare	{
		width: 100%;
	}
	
	
	#backtomenu{
		transform-origin: top left;
		transform: scale(0.3);
	}
	
	h1	{
		margin: auto;
	}
	
	#theatre{
		font-size: 16px;
		padding: 20px;
		width: 85%;
	}

	#log	{
		display: none;
	}
	
	h1	{
		font-size: 30px;
	}
	
	#quote {
		font-size: 20px;
	}
	
	#scene {
	width: 100%;
}

	#straat {
	display: flex;
	flex-wrap: wrap;
	}
}