body{
	margin-top: 150px;
	margin-left: 60px;
	background-image: url("channels4_banner.jpg");
	background-repeat: repeat;
}

.tech-slideshow {
  height: 600px;
  max-width: 2000px;
  position: relative;
  margin-top: -600px;
  margin-left: -150px;
  margin-right: -150px;
  overflow: hidden;
  transform: translate3d(0, 0, 0);
}

.tech-slideshow > div {
  height: 200px;
  width: 3000px;
  background: url("channels4_banner.jpg");
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  transform: translate3d(0, 0, 0);
  animation: moveSlideshow 40s linear infinite;
  opacity: 1;
}

@keyframes moveSlideshow {
  100% { 
    transform: translateX(-66.6666%);  
  }
}

#naam	{
	position: fixed;
	color: #121210;
	white-space: nowrap;
	bottom: 685px;
	font-size: 100px;
	margin-left: -400px;
	text-shadow: 0px 3px white;
}

#backimage	{
	position: absolute;
	width: 100vw;
	object-fit: contain; 
}

#blackleft	{
	position: absolute;
	left: -15vw;
	background-color: #121210;
	width: 20vw;
	height: 3000px;
}

#blackright	{
	position: absolute;
	left: 90vw;
	background-color: #121210;
	width: 3000px;
	height: 3000px;
}

#straat{
	display: flex;
}

#schuinenav	{
	display: flex;
	padding-top: 5px;
	padding-left: 35%;
	margin-left: -200px;
	margin-right: -200px;
	background-color: #121210 /*#f0e9a3*/;
	box-shadow: 4px 4px black;
}

#pointout {
	position: relative;
	padding-left: 5px;
	padding-right: 5px;
	margin-right: 5px;
	background-image: url(channels4_banner.png);
	max-height: 75px;
	max-width: 75px;
	-webkit-text-stroke: 1px black;
}

#taskbar {
	margin-right:5px;
}

#sidebox	{
	margin-left: 20%;
	position: relative;
	max-width: 50%;
	background-color: #c6d68b;
	overflow: auto;
	box-shadow: 5px 5px black;
	margin-right: 7vw;
}

#sideboxinside {
	position: relative;
	padding-left: 20px;
	padding-right: 20px;
	padding-bottom: 10px;
	padding-top: 10px;
	overflow: scroll;
	height:600px;
}	

#sideimage	{
	position: relative;
	width: 15vw;
	height: 40vh;
	margin-top: 5vh;
	box-shadow: 10px 10px black;
}
	
body{
	transform: rotate(10deg);
	overflow: hidden;
}

@media only screen and (max-width: 768px) {
	/* for mobile*/
	body	{
		transform: rotate(0deg);
	}
	
	#sideimage {
		display: none; 
	}
	
	#sidebox	{
		max-width: 80%;
		margin: auto;
	}
	
	#nav	{
		margin: auto;
	}
	
	#blackright	{
		left: 85vw;
	}
	
	#naam	{
		bottom: 710px;
		font-size: 40px;
		margin-left: -12%
	}
	
}