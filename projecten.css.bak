body {
	background-color: black;
	margin: 0;
}

.row {
  display: flex;
  height: 100vh;
  width: 60vw;
  margin-left: 20vw;
}

.column {
  min-width: 0; /* new */
  max-height: 88vh;
  flex: 1;      /* adjustment */
  overflow: hidden;
  border: 2px solid #000;
  transition: all 300ms ease-in-out;
  background-color: yellow;
}

.column:hover {
  flex-grow: 10.3;
}

